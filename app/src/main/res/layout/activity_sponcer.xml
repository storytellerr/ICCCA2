<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shashank.iccca.Sponcer">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/background_light">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colourR"
                android:text="   OUR SPONCERS"
                android:textSize="23dp"
                android:textColor="#fcf7f7"
                android:paddingTop="8dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:src="@drawable/capture"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/capture2"
                android:scaleType="fitXY"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colourR"
                android:text="   WANT TO BE A SPONCER"
                android:textSize="20dp"
                android:textColor="#fcf7f7"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:textSize="18dp"
                android:text="@string/sponcer1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@color/colourR"
                android:text="TERA Sponsorship: Greater Than INR 1,00,000/-"
                android:textSize="25dp"
                android:textColor="#fcf7f7"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/tera"

                android:layout_marginBottom="2dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colourR"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text=" GIGA Sponsorship: INR 50,000/-"
                android:textSize="25dp"
                android:textColor="#fcf7f7"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/giga"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colourR"
                android:text="MEGA Sponsorship: INR 35,000/-"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#fcf7f7"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/mega"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colourR"
                android:text="ADDITIONAL SPONSORSHIP OPPORTUNITIES"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#fcf7f7"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/additional"
                android:scaleType="fitXY"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colourR"
                android:text="CONTACT US"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="27dp"
                android:textColor="#fcf7f7"
                />

        </LinearLayout>


    </ScrollView>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

</RelativeLayout>
